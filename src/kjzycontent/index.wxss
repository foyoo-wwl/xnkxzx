@media screen and (min-width: 750px) {
  .KjzyContentWrap {
    width: 1260px;
    margin: 0 auto;
  }
  .KjzyContentWrap .breadcrumb {
    width: 1260px;
    margin: 20px auto;
  }
  .KjzyContentWrap .content {
    width: 100%;
    overflow: hidden;
  }
  .KjzyContentWrap .content .header {
    width: 100%;
    height: 300px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .KjzyContentWrap .content .header .headerImg {
    width: 600px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 7px;
    overflow: hidden;
  }
  .KjzyContentWrap .content .header .headerImg img {
    width: 100%;
  }
  .KjzyContentWrap .content .header .headerTitle {
    width: 548px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .KjzyContentWrap .content .header .headerTitle .title {
    font-size: 20px;
    font-weight: bold;
    color: #5b6571;
  }
  .KjzyContentWrap .content .header .headerTitle .headerAbstract {
    font-size: 16px;
    line-height: 25px;
    color: #5b6571;
    margin-top: 10px;
    text-align: justify;
    display: -webkit-box;
    -webkit-line-clamp: 10;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .KjzyContentWrap .content .copyrightWrap {
    width: 100%;
    height: 335px;
    border-radius: 6px;
    background-color: #ffffff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 40px;
  }
  .KjzyContentWrap .content .copyrightWrap .left {
    width: 312px;
    height: 227px;
    border-right: 1px solid #e8e8eb;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
  }
  .KjzyContentWrap .content .copyrightWrap .left .title {
    font-size: 24px;
    color: #616976;
    font-weight: bold;
  }
  .KjzyContentWrap .content .copyrightWrap .left .logo {
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .KjzyContentWrap .content .copyrightWrap .left .logo img {
    width: auto;
    height: 100%;
  }
  .KjzyContentWrap .content .copyrightWrap .left .botFont {
    width: 80%;
    text-align: center;
    color: #6c757c;
  }
  .KjzyContentWrap .content .copyrightWrap .right {
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 52px;
  }
  .KjzyContentWrap .content .copyrightWrap .right .title {
    height: 227px;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
  }
  .KjzyContentWrap .content .copyrightWrap .right .title .top {
    font-size: 24px;
    color: #616976;
    font-weight: bold;
  }
  .KjzyContentWrap .content .copyrightWrap .right .title .name {
    color: #027feb;
    margin-bottom: 100px;
  }
  .KjzyContentWrap .content .copyrightWrap .right .resource {
    width: 180px;
    height: 55px;
    background-color: #00b17d;
    color: #fff;
    font-size: 28px;
    display: block;
    border-radius: 7px;
    text-align: center;
    line-height: 55px;
    margin-top: 100px;
    cursor: pointer;
  }
  .KjzyContentWrap .content .pics {
    width: 100%;
    border-radius: 10px;
    background-color: #fff;
    margin-top: 20px;
    padding: 30px 0;
    margin-bottom: 30px;
  }
  .KjzyContentWrap .content .pics .content {
    width: 90%;
    margin: 0 auto;
    text-align: justify;
  }
  .checkWrap {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .buttonWrap {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
  }
}
.kjzycontent {
  background-color: #f5f5f5;
}
