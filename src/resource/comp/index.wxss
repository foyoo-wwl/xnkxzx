@media screen and (min-width: 750px) {
  .card {
    width: 300px;
    height: 300px;
    background-color: pink;
    margin-bottom: 10px;
  }
  .compList {
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0 auto;
  }
  .compList .kjzy_comm_source {
    width: 295px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-bottom: 25px;
  }
  .compList .kjzy_comm_source .kjzy_commImg {
    width: 100%;
    height: 160px;
    background-size: cover;
  }
  .compList .kjzy_comm_source .kjzy_commCon {
    width: 350px;
    overflow: hidden;
  }
