@media screen and (min-width: 750px) {
  .videoDetailWrap {
    width: 1260px;
    margin: 0 auto;
  }
  .videoDetailWrap .breadcrumb {
    width: 1260px;
    margin: 20px auto;
  }
  .videoDetailWrap .video_content {
    width: 1180px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 50px;
  }
  .videoDetailWrap .video_content .videoSec .title {
    width: 100%;
    font-size: 24px;
    text-align: center;
  }
  .videoDetailWrap .video_content .videoSec .sourceSec {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-top: 30px;
  }
  .videoDetailWrap .video_content .videoSec .sourceSec .time {
    margin-left: 58px;
  }
  .videoDetailWrap .video_content .videoSec .player {
    width: 700px;
    height: 390px;
    margin-top: 30px;
  }
  .videoDetailWrap .video_content .videoSec .tags {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin: 30px auto;
  }
  .videoDetailWrap .video_content .videoSec .tags .tag {
    border: 1px solid #ffa92e;
    margin-right: 25px;
    font-size: 14px;
    padding: 6px 13px;
  }
  .videoDetailWrap .videoDown {
    width: 430px;
    overflow: hidden;
    background-color: #f8f8fa;
    position: relative;
  }
  .videoDetailWrap .videoDown .h1 {
    width: 100%;
    height: 40px;
    background-color: #d4f5eb;
    font-size: 22px;
    color: #6f7e85;
    text-align: center;
    line-height: 40px;
  }
  .videoDetailWrap .videoDown .detailContent {
    width: 340px;
    margin: 40px auto 0;
  }
  .videoDetailWrap .videoDown .detailContent .title {
    font-size: 20px;
    text-align: center;
  }
  .videoDetailWrap .videoDown .detailContent .desc {
    margin-top: 18px;
  }
  .videoDetailWrap .videoDown .downBtn {
    width: 172px;
    height: 48px;
    text-align: center;
    line-height: 48px;
    background-color: #00b17d;
    border-radius: 5px;
    margin: 50px auto;
    color: #fff;
    font-size: 24px;
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translate(-50%, 0);
    cursor: pointer;
  }
  .videoDetailWrap .videoList {
    padding: 30px;
  }
  .videoDetailWrap .videoList .videoLink {
    height: 60px;
    font-size: 16px;
    font-family: "microsoft yahei";
    color: #000;
    line-height: 60px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    border-top: 1px solid #cccccc;
  }
}
