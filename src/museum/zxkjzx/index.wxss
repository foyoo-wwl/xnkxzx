@media screen and (min-width: 750px) {
  .zxkjzx_wrap {
    width: 1260px;
    overflow: hidden;
    margin: 0 auto;
  }
  .zxkjzx_wrap .breadcrumb {
    width: 1260px;
    margin: 20px auto;
  }
  .zxkjzx_wrap .listWrap {
    width: 1260px;
    margin: 50px auto 20px;
  }
  .zxkjzx_wrap .listWrap .listTitle {
    width: 100%;
    height: 50px;
    background-color: red;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .zxkjzx_wrap .listWrap .listContent {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .zxkjzx_wrap .menuContent {
    border: 1px solid #dfe9f5;
    border-radius: 10px;
    background: #fff;
    margin-top: 30px;
    padding: 8px 20px;
  }
  .zxkjzx_wrap .menuContent .sort_comm {
    display: flex;
    padding: 12px 0;
  }
  .zxkjzx_wrap .menuContent .sort_comm .sort_title {
    min-width: 70px;
    color: #5b6571;
    font-size: 16px;
    font-family: "微软雅黑";
    font-weight: bold;
    padding: 6px 9px;
  }
  .zxkjzx_wrap .menuContent .sort_comm .sort_category {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
  }
  .zxkjzx_wrap .menuContent .sort_comm .sort_category span {
    padding: 6px 9px;
    color: #5b6571;
    font-size: 16px;
    font-family: "微软雅黑";
    margin-left: 22.5px;
    cursor: pointer;
  }
  .zxkjzx_wrap .menuContent .sort_comm .sort_category .active {
    color: #ff6000;
    background: #ffe7d4;
    border-radius: 5px;
  }
  .zxkjzx_wrap .pagination {
    margin: 0 auto 30px;
    text-align: center;
  }
  .zxkjzx_wrap .kxhdalWrap {
    width: 1260px;
    margin: 0 auto 50px;
  }
  .zxkjzx_wrap .xnkjg_comm {
    width: 406px;
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
    display: block;
    text-decoration: none !important;
    margin-bottom: 30px;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_img {
    width: 100%;
    height: 260px;
    position: relative;
    display: block;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_img .xnkjg_imgIcon {
    position: absolute;
    top: 20px;
    left: 0;
    width: 48px;
    height: 26px;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_text {
    padding: 0 10px;
    padding-top: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_text .xnkjg_textL {
    font-size: 20px;
    font-family: "微软雅黑";
    font-weight: bold;
    color: #5b6571;
    cursor: pointer;
    flex: 1;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_text .xnkjg_textR {
    height: auto;
    line-height: 22px;
    font-size: 16px;
    font-family: "微软雅黑";
    color: #fff;
    display: flex;
    justify-content: center;
    padding: 0 7px;
    background: #007dde;
    border-radius: 5px;
    margin: 0 0 0 10px;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_address {
    padding: 15px 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_address .xnkjg_addressL {
    display: flex;
    align-items: center;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_address .xnkjg_addressL img {
    height: 14px;
    padding-right: 5px;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_address .xnkjg_addressL span {
    font-size: 14px;
    font-family: "微软雅黑";
    color: #818c99;
  }
  .zxkjzx_wrap .xnkjg_comm .xnkjg_address .xnkjg_addressR {
    font-size: 14px;
    font-family: "微软雅黑";
    color: #818c99;
  }
}
