.kxhd_wrap {
  width: 1260px;
  overflow: hidden;
  margin: 0 auto;
}
.kxhd_wrap .breadcrumb {
  width: 1260px;
  margin: 20px auto;
}
.kxhd_wrap .listWrap {
  width: 1260px;
  margin: 50px auto 20px;
}
.kxhd_wrap .listWrap .listTitle {
  width: 100%;
  height: 50px;
  background-color: red;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.kxhd_wrap .listWrap .listContent {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.kxhd_wrap .menuContent {
  border: 1px solid #dfe9f5;
  border-radius: 10px;
  background: #fff;
  margin-top: 30px;
  padding: 8px 20px;
}
.kxhd_wrap .menuContent .sort_comm {
  display: flex;
  padding: 12px 0;
}
.kxhd_wrap .menuContent .sort_comm .sort_title {
  min-width: 70px;
  color: #5b6571;
  font-size: 16px;
  font-family: "微软雅黑";
  font-weight: bold;
  padding: 6px 9px;
}
.kxhd_wrap .menuContent .sort_comm .sort_category {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.kxhd_wrap .menuContent .sort_comm .sort_category span {
  padding: 6px 9px;
  color: #5b6571;
  font-size: 16px;
  font-family: "微软雅黑";
  margin-left: 22.5px;
  cursor: pointer;
}
.kxhd_wrap .menuContent .sort_comm .sort_category .active {
  color: #ff6000;
  background: #ffe7d4;
  border-radius: 5px;
}
.kxhd_wrap .pagination {
  margin: 0 auto 30px;
  text-align: center;
}
.kxhd_wrap .kxhdalWrap {
  width: 1260px;
  margin: 0 auto 50px;
}
.kxhd_wrap .kxhdal_comm {
  margin-bottom: 30px;
}
