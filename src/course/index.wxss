@media screen and (min-width: 750px) {
  .home_wrap {
    width: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }
  .home_wrap .breadcrumb {
    width: 1260px;
    margin: 20px auto;
  }
  .home_wrap .pagination {
    text-align: center;
    margin: 10px auto 20px;
  }
  .listWrap {
    width: 1260px;
    margin: -20px auto 20px;
  }
  .listWrap .compList {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .listWrap .listTitle {
    width: 100%;
    height: 50px;
    background-color: red;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .listWrap .listContent {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .kxhdal_comm {
    width: 100%;
    height: 240px;
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    border-radius: 10px;
    flex-direction: row;
    margin-bottom: 10px;
  }
  .kxhdal_comm .kxhdal_img {
    width: 400px;
    height: 240px;
    border-radius: 10px 0 0 10px;
    overflow: hidden;
    background-size: cover;
  }
  .kxhdal_comm .kxhdal_mid {
    width: 560px;
  }
  .kxhdal_comm .kxhdal_mid .kxhdal_txt {
    font-size: 18px;
    font-family: 微软雅黑;
    color: #6b7580;
    font-weight: bold;
    padding-top: 20px;
  }
  .kxhdal_comm .kxhdal_mid .kxhdal_mask_content {
    font-size: 14px;
    font-family: 微软雅黑;
    color: #6b7580;
    line-height: 24px;
    padding-top: 15px;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .kxhdal_comm .kxhdal_r {
    width: 160px;
    display: flex;
    align-items: center;
    margin-right: 20px;
    justify-content: space-between;
    flex-direction: column;
    padding: 35px 0;
  }
  .kxhdal_comm .kxhdal_r .logo {
    width: 90%;
  }
  .kxhdal_comm .kxhdal_r .logo img {
    width: 100%;
  }
  .kxhdal_comm .kxhdal_r .operation {
    width: 100%;
    height: 48px;
    font-size: 16px;
    font-family: 微软雅黑;
    color: #ffffff;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    border-radius: 5px;
    background: #00b17d;
    color: #ffe466;
  }
  .kxhdal_comm .kxhdal_r .operation a {
    flex: 1;
    color: #ffe466;
    height: 48px;
    text-align: center;
    padding: 0 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 16px;
  }
  .kxhdal_comm .kxhdal_r .operation .donwLink {
    color: #ffe466;
    height: 48px;
    text-align: center;
    line-height: 48px;
    padding: 0 5px;
    display: block;
    flex: 1;
  }
}
